{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"outDir": "./build/js",
		"rootDir": "./src/js",
		"allowJs": true,
		"noImplicitAny": false,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["src/js/**/*", ".eslintrc.cjs", "src/global.d.ts"],
	"exclude": ["node_modules"]
}
