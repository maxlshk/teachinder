{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"outDir": "./build/js",
		"rootDir": "./src/js",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["src/js/**/*", ".eslintrc.cjs"],
	"exclude": ["node_modules"]
}
